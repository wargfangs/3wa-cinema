{% extends 'WABoBundle::layout.html.twig' %}

{% block content -%}
    <h1>Comments list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Note</th>
                <th>Content</th>
                <th>State</th>
                <th>Datecreated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('comments_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.note }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.state }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('comments_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('comments_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>
        <ul>
        <li>
            <a href="{{ path('comments_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>


    {% endblock %}
