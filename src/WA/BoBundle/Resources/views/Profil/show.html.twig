{% extends 'WABoBundle::layout.html.twig' %}

{% block content -%}
    <h1>Profil</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Email : </th>
            <td>{{ app.user.email }}</td>
        </tr>
        <tr>
            <th>Id : </th>
            <td>{{ app.user.id }}</td>
        </tr>
        <tr>
            <th>Username : </th>
            <td>{{ app.user.username }}</td>
        </tr>
        <tr>
            <th>Ville : </th>
            <td>{{ app.user.ville }}</td>
        </tr>
        <tr>
            <th>Code Postal : </th>
            <td>{{ app.user.zipcode }}</td>
        </tr>
        <tr>
            <th>Tel : </th>
            <td>{{ app.user.tel }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
